<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/paddingCard"
    android:gravity="center_vertical"
    android:background="@color/white"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/detail_cart_item_title"
        android:layout_weight="7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="珍珠奶茶"
        android:textColor="@color/black"
        android:textSize="18sp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_weight="4"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/detail_cart_item_price"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="￥14"
            android:maxLength="5"
            android:textColor="#FF543B"
            android:textSize="18sp"
            android:textStyle="bold"/>
        <LinearLayout
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/detail_cart_item_mini"
                android:layout_width="30sp"
                android:layout_height="25sp"
                android:src="@drawable/mini"/>
            <TextView
                android:id="@+id/detail_cart_item_cnt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginHorizontal="@dimen/divider"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:text="1"/>
            <ImageView
                android:id="@+id/detail_cart_item_add"
                android:layout_width="30sp"
                android:layout_height="25sp"
                android:src="@drawable/add"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>