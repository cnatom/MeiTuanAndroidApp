<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_list_item_click"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/marginCard"
    android:background="@drawable/shape_corner"
    android:layout_marginTop="@dimen/divider"
    android:orientation="horizontal"
    android:padding="@dimen/paddingCard">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="100sp"
        android:layout_weight="3"
        app:cardCornerRadius="10sp"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/detail_item_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@drawable/home_preview1"/>
    </androidx.cardview.widget.CardView>

    <LinearLayout

        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="15sp"
        android:layout_weight="7"
        android:orientation="vertical">
        <TextView
            android:id="@+id/detail_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="标题"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="@dimen/home_item_title"
            android:textStyle="bold" />
        <androidx.cardview.widget.CardView
            android:layout_marginTop="5sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardElevation="0dp"
            app:contentPadding="2sp"
            app:cardCornerRadius="2sp"
            app:cardBackgroundColor="@color/lable_background">
            <TextView
                android:id="@+id/detail_item_lable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="门店销量第1名"
                android:textColor="@color/lable_text"/>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_marginTop="5sp"

            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_weight="2"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/detail_item_sale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="月售1023 好评100%"
                    android:textSize="@dimen/home_item_subTitle" />
                <TextView
                    android:id="@+id/detail_item_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#E85B4D"
                    android:text="￥20.8"
                    android:textSize="18sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/detail_item_click"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_margin="5sp"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="10sp"
                    app:cardBackgroundColor="@color/main"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:text="选购"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>