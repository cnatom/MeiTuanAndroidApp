<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/detail_toolbar"
        android:background="@color/main"
        android:layout_width="match_parent"
        app:title="店铺详情"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
<!--                店家简介-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60sp"
                        android:background="#F8D347"/>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="120sp"
                            android:layout_marginTop="10sp"
                            app:cardCornerRadius="10sp"
                            app:cardElevation="2dp"
                            android:layout_marginHorizontal="20sp">
                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:background="@color/white"
                                android:layout_height="match_parent">
                                <LinearLayout
                                    android:layout_weight="7"
                                    android:orientation="vertical"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:padding="@dimen/paddingCard">
                                    <TextView
                                        android:id="@+id/detail_title"
                                        android:text="大脸鸡排"
                                        android:textStyle="bold"
                                        android:textSize="@dimen/home_item_title"
                                        android:textColor="@color/black"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"/>
                                    <LinearLayout
                                        android:orientation="vertical"
                                        android:gravity="center_vertical"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">
                                        <TextView
                                            android:id="@+id/detail_deliver"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textSize="@dimen/home_item_subTitle"
                                            android:text="配送约30分钟"/>
                                        <TextView
                                            android:id="@+id/detail_announce"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textSize="@dimen/home_item_subTitle"
                                            android:text="公告：晚上不配送"/>
                                    </LinearLayout>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_weight="5"
                                    android:layout_width="0dp"
                                    android:gravity="right|center"
                                    android:layout_height="match_parent">
                                    <androidx.cardview.widget.CardView
                                        android:layout_width="match_parent"
                                        app:cardCornerRadius="10sp"
                                        android:layout_margin="10sp"
                                        app:cardElevation="0dp"
                                        android:layout_height="wrap_content">
                                        <ImageView
                                            android:id="@+id/detail_image"
                                            android:layout_width="match_parent"
                                            android:scaleType="centerCrop"
                                            android:layout_height="match_parent"
                                            android:background="@drawable/home_preview1"/>
                                    </androidx.cardview.widget.CardView>
                                </LinearLayout>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="10sp"/>
                    </LinearLayout>

                </RelativeLayout>
<!--                菜单列表-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/home_item_title"
                    android:textColor="@color/black"
                    android:layout_margin="15sp"
                    android:text="菜单"/>
                <LinearLayout
                    android:layout_marginHorizontal="15sp"
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:background="#DEDEDE"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/detail_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:listitem="@layout/detail_item"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100sp"/>
            </LinearLayout>

        </androidx.core.widget.NestedScrollView>
<!--        底栏-->
        <RelativeLayout
            android:id="@+id/detail_bottom_sheet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom">
            <LinearLayout
                android:gravity="bottom"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="55sp"
                android:background="#454545">
                <!--            左边购物车按钮-->
                <RelativeLayout
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:layout_height="match_parent">
                        <androidx.cardview.widget.CardView
                            android:id="@+id/detail_shop_button"
                            android:layout_width="40sp"
                            android:layout_height="40sp"
                            android:padding="10sp"
                            app:cardCornerRadius="100sp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="#454545">
                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:cardCornerRadius="100sp"
                                app:cardBackgroundColor="#3090E8">
                                <ImageView
                                    android:layout_width="25sp"
                                    android:layout_height="25sp"
                                    android:layout_gravity="center"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/shopping"/>
                            </androidx.cardview.widget.CardView>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                    <!--            标记点-->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/detail_bottom_dot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="5sp"
                        android:layout_marginEnd="10sp"
                        app:cardBackgroundColor="#FC5531"
                        app:cardElevation="0dp"
                        app:cardCornerRadius="100sp">
                        <TextView
                            android:id="@+id/detail_bottom_dot_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:layout_marginHorizontal="5sp"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:text="5"/>
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="7"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/detail_bottom_price_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:text="￥0"
                        android:maxLength="6"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="18sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="另需配送费￥5"
                        android:textColor="@color/white"
                        android:textStyle="normal"
                        android:textSize="14sp"/>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/detail_submit_button"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="#FF9500">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="去结算"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/white"/>
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>

